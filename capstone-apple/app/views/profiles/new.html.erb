<h2>User Profile</h2>
<%= form_tag '/profiles', method: :post do %>
  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name, @profile.name %>
  </div>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email, @profile.email %>
  </div>
  <div>
    <%= label_tag :address %>
    <%= text_field_tag :address, @profile.address %>
  </div>
  <div>
    <%= label_tag :phone %>
    <%= text_field_tag :phone, @profile.phone %>
  </div>
  <div>
    <%= label_tag :description %>
    <%= text_field_tag :description, @profile.description %>
  </div>
<br>
  <div>
    <%= submit_tag "Create New Profile", class:"btn btn-success" %>
  </div>
<% end %>
